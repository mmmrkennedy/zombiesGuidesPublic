<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        <!-- SEO Meta Tags -->
        <title>{{ title }}{% if title != "Zombies Easter Eggs & Quests Guides" %} - Call of Duty Zombies Guide{% endif %}</title>
        <meta name="description" content="{{ description or 'Complete Call of Duty Zombies Easter Egg guide for ' + title + '. Step-by-step walkthrough with pictures, videos, and detailed instructions.' }}">
        <meta name="keywords" content="Call of Duty, Zombies, Easter Egg, Guide, {{ title }}, Walkthrough">
        <meta name="author" content="mmmrkennedy">
        <link rel="canonical" href="https://mmmrkennedy.com{{ page.url }}">

        <!-- Open Graph / Facebook -->
        <meta property="og:type" content="article">
        <meta property="og:url" content="https://mmmrkennedy.com{{ page.url }}">
        <meta property="og:title" content="{{ title }} - Call of Duty Zombies Guide">
        <meta property="og:description" content="{{ description or 'Complete walkthrough and Easter Egg guide for ' + title + ' with step-by-step instructions, pictures, and videos.' }}">
        <meta property="og:image" content="{{ ogImage or 'https://mmmrkennedy.com/SEO_img.png' }}">
        <meta property="og:site_name" content="mmmrkennedy's Zombies Guides">

        <!-- Twitter Card -->
        <meta name="twitter:card" content="summary_large_image">
        <meta name="twitter:url" content="https://mmmrkennedy.com{{ page.url }}">
        <meta name="twitter:title" content="{{ title }} - Call of Duty Zombies Guide">
        <meta name="twitter:description" content="{{ description or 'Complete walkthrough and Easter Egg guide for ' + title }}">
        <meta name="twitter:image" content="{{ ogImage or 'https://mmmrkennedy.com/SEO_img.png' }}">

        <!-- Stylesheets -->
        <link rel="stylesheet" type="text/css" href="/css/styles.css?v={{ site.buildVersion }}">
        <link rel="stylesheet" type="text/css" href="/css/kofi.css?v={{ site.buildVersion }}">
        {%- if useSolverCSS %}
        <link rel="stylesheet" type="text/css" href="/css/global_solver.css?v={{ site.buildVersion }}">
        {%- endif %}

        <!-- Favicon -->
        <link rel="icon" type="image/x-icon" href="/favicon/favicon.ico">
        <base target="_blank">

        <!-- JSON-LD Structured Data -->
        <script type="application/ld+json">
        {
            "@context": "https://schema.org",
            "@type": "HowTo",
            "name": "{{ title }}",
            "description": "{{ description or 'Complete Call of Duty Zombies Easter Egg guide for ' + title + '. Step-by-step walkthrough with pictures, videos, and detailed instructions.' }}",
            "url": "https://mmmrkennedy.com{{ page.url }}",
            "image": "{{ ogImage or 'https://mmmrkennedy.com/SEO_img.png' }}",
            "author": {
                "@type": "Person",
                "name": "mmmrkennedy",
                "url": "https://mmmrkennedy.com"
            },
            "publisher": {
                "@type": "Organization",
                "name": "mmmrkennedy's Zombies Guides",
                "url": "https://mmmrkennedy.com"
            },
            "genre": "Gaming Guide",
            "about": {
                "@type": "VideoGame",
                "name": "Call of Duty Zombies"
            }
        }
        </script>

        {%- if breadcrumb %}
        <!-- Breadcrumb Structured Data -->
        <script type="application/ld+json">
        {
            "@context": "https://schema.org",
            "@type": "BreadcrumbList",
            "itemListElement": [
                {
                    "@type": "ListItem",
                    "position": 1,
                    "name": "Home",
                    "item": "https://mmmrkennedy.com/"
                }
                {%- for crumb in breadcrumb -%}
                ,{
                    "@type": "ListItem",
                    "position": {{ loop.index + 1 }},
                    "name": "{{ crumb }}"
                }
                {%- endfor %}
            ]
        }
        </script>
        {%- endif %}
    </head>

    <body{% if skipTOC %} data-skip-toc="true"{% endif %}>
        <div class="version-display" data-version="{{ site.buildVersion }}">
            <div class="version-and-toggle">
                v.<span id="version-number">0</span>
            </div>
        </div>


        <div class="top-buttons-background-box">
            <!-- Title at the top of the page -->
            <h1 class="title-text">{{ title }}</h1>

            <!-- Mobile devices content -->
            <div id="mobileContent" style="display: none">
                <button type="button" class="toggle-button top-left" onclick="navigateToIndex()">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-circle-arrow-left-icon lucide-circle-arrow-left">
                        <circle cx="12" cy="12" r="10" />
                        <path d="m12 8-4 4 4 4" />
                        <path d="M16 12H8" />
                    </svg>
                </button>
                <button type="button" class="toggle-button bottom-right" onclick="scrollToTop()">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-arrow-up-to-line-icon lucide-arrow-up-to-line">
                        <path d="M5 3h14" />
                        <path d="m18 13-6-6-6 6" />
                        <path d="M12 7v14" />
                    </svg>
                </button>
            </div>

            <!-- Non-mobile devices content -->
            <div id="nonMobileContent" style="display: none">
                <button type="button" class="toggle-button top-left" onclick="navigateToIndex()">Back</button>
                <button type="button" class="toggle-button bottom-right" onclick="scrollToTop()">Back to Top</button>
            </div>
        </div>

        <div class="content-window">
            {# This is where page-specific content will be inserted #}
            {{ content | safe }}
        </div>


        <!-- Ko-fi -->
        {% if showKofi %}
        <div class="kofi-container">
            <a href="https://ko-fi.com/X8X61TUY37" target="_blank" class="kofi-button">
                <img src="/tips_symbol.png" alt="Ko-fi" class="kofi-img">
                Tips (Ko-Fi)
            </a>
        </div>
        {% endif %}

        <!-- Core utilities -->
        <script src="/js/core/page-utils.js?v={{ site.buildVersion }}" defer></script>

        <!-- Navigation -->
        <script src="/js/navigation/scroll-manager.js?v={{ site.buildVersion }}" defer></script>
        <script src="/js/navigation/nav-utils.js?v={{ site.buildVersion }}" defer></script>

        <!-- UI Components -->
        <script src="/js/ui/tutorial-system.js?v={{ site.buildVersion }}" defer></script>
        <script src="/js/ui/lightbox.js?v={{ site.buildVersion }}" defer></script>

        <!-- Content Processing -->
        <script src="/js/content/link-processor.js?v={{ site.buildVersion }}" defer></script>
        <script src="/js/content/quick-links.js?v={{ site.buildVersion }}" defer></script>

        <!-- Device & Environment -->
        <script src="/js/device/mobile-detection.js?v={{ site.buildVersion }}" defer></script>

        <!-- Shared utilities -->
        <script src="/js/quick-links-utils.js?v={{ site.buildVersion }}" defer></script>

        <!-- Main scripts -->
        <script src="/js/scripts.js?v={{ site.buildVersion }}" defer></script>

        {%- if useReactSolvers %}
        <!-- REACT_BUNDLE_PLACEHOLDER -->
        {%- endif %}
    </body>
</html>
